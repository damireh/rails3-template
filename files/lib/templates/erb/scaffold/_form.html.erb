<%%= form_for @<%= singular_table_name %>, html: { class: "form-horizontal" } do |f| %>
  <fieldset>
    <legend><%= singular_table_name.capitalize %></legend>
    
    <%%= render 'shared/form_error_messages', resource: @<%= singular_table_name %> %>

    <% attributes.each do |attribute| %>
    <div class="control-group">
      <%%= f.label :<%= attribute.name %>, class: "control-label" %>
      <div class="controls"><%%= f.<%= attribute.field_type %> :<%= attribute.name %> %></div>
    </div>
    <% end %>
    <div class="form-actions">
      <%%= f.submit nil, class: "btn btn-primary" %>
      <%%= link_to "Cancel", :back, class: "btn" %>
    </div>
  </fieldset>
<%% end %>
