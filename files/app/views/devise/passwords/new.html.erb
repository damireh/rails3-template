<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= render 'shared/form_error_messages', resource: resource %>
  <fieldset>
    <legend>Forgot your password?</legend>
    
    <div class="control-group">
      <%= f.label :email, class: 'control-label' %>
      <div class="controls"><%= f.email_field :email %></div>
    </div>
    
    <div class="form-actions">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-danger'  %>
    </div>
  </fieldset>
<% end %>

<%= render "links" %>
