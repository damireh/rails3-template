<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= render 'shared/form_error_messages', resource: resource %>
  <fieldset>
    <legend>Resend unlock instructions</legend>
    
    <div class="control-group">
      <%= f.label :email, class: 'control-label' %>
      <div class="controls"><%= f.email_field :email %></div>
    </div>
    
    <div class="form-actions">
      <%= f.submit "Resend unlock instructions", class: 'btn' %>
    </div>
  </fieldset>
<% end %>

<%= render "links" %>
