<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
  <%= render 'shared/form_error_messages', resource: resource %>
  <fieldset>
    <div class="page-header">
      <h3>User Settings</h3>
    </div>

    <div class="control-group">
      <%= f.label :avatar, class: 'control-label' %>
      <div class="controls">
        <%= image_tag current_user.avatar %><br />
        <%= f.file_field :avatar %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :name, class: 'control-label' %>
      <div class="controls"><%= f.text_field :name %></div>
    </div>

    <div class="control-group">
      <%= f.label :username, class: 'control-label' %>
      <div class="controls"><%= f.text_field :username %></div>
    </div>

    <div class="control-group">
      <%= f.label :email, class: 'control-label' %>
      <div class="controls"><%= f.email_field :email %></div>
    </div>

    <div class="control-group">
      <%= f.label :password, class: 'control-label' %>
      <div class="controls">
        <%= f.password_field :password %>
        <small class="muted">leave blank if you don't want to change it</small>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, class: 'control-label' %>
      <div class="controls"><%= f.password_field :password_confirmation %></div>
    </div>

    <hr />

    <div class="control-group">
      <%= f.label :current_password, class: 'control-label' %>
      <div class="controls">
        <%= f.password_field :current_password %>
        <small class="muted">we need your current password to confirm your changes</small>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit 'Update', class: 'btn' %>
      <p class="pull-right"><%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?\nCancelling your account deletes all the data associated with your account!" }, method: :delete, class: 'btn btn-danger' %></p>
    </div>
  </fieldset>
<% end %>
